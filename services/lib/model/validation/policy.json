{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "bbk://policy",
    "definitions": {
        "_policy": {
            "type": "object",
            "properties": {
                "access_control": {
                    "$ref": "#/definitions/_access_control"
                },
                "data_segment": {
                    "$ref": "#/definitions/_data_segment"
                },
                "legal_context": {
                    "$ref": "#/definitions/_legal_context"
                }
            },
            "required": [
                "access_control",
                "data_segment",
                "legal_context"
            ]
        },
        "_access_control": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "quota": {
                    "type": "object",
                    "properties": {
                        "max_number": {
                            "type": "integer",
                            "minimum": 0
                        },
                        "interval_type": {
                            "enum": [
                                "day",
                                "month"
                            ]
                        }
                    }
                },
                "rate": {
                    "type": "integer",
                    "minimum": 0
                }
            },
            "required": [
                "enabled"
            ]
        },
        "_data_segment": {
            "type": "object",
            "properties": {
                "segment_query": {
                    "type": "object"
                },
                "field_masks": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "segment_query"
            ]
        },
        "_legal_context": {
            "type": "array",
            "minItems": 0,
            "maxItems": 100,
            "items": {
                "$ref": "#/definitions/_legal_item"
            }
        },
        "_legal_item": {
            "type": "object",
            "properties": {
                "type": {
                    "enum": [
                        "attribution",
                        "contact",
                        "license",
                        "note",
                        "source",
                        "terms"
                    ]
                },
                "text": {
                    "$ref": "bbk://string"
                },
                "link": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "maxLength": 1024,
                    "format": "uri",
                    "pattern": "^https?://.*$"
                }
            },
            "required": [
                "type",
                "text",
                "link"
            ]
        }
    },
    "type": "object",
    "properties": {
        "name": {
            "$ref": "bbk://name"
        },
        "description": {
            "$ref": "bbk://description"
        },
        "policy": {
            "$ref": "#/definitions/_policy"
        }
    },
    "required": [
        "name",
        "description",
        "policy"
    ]
}
