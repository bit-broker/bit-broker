{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "bbk://records",
    "definitions": {
        "record": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 256
                },
                "name":
                {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 256
                },
                "entity": { "type": "object" },
                "instance": { "type": "object" }
            },
            "required": ["id", "name", "entity"],
            "additionalProperties": false
        }
    },
    "upsert": {
        "type": "array",
        "items": { "$ref": "#/definitions/record" },
        "minItems": 0,
        "maxItems": 100,
        "uniqueItems": false
    },
    "delete": {
        "type": "array",
        "items": { "type": "string" },
        "minItems": 0,
        "maxItems": 100,
        "uniqueItems": false
    }
}
