{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "bbk://entity",
    "type": "object",
    "properties": {
        "name": { "$ref": "bbk://name" },
        "description": { "$ref": "bbk://description" },
        "schema": {
            "type": "object"
        },
        "tags": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "minLength": 1,
                "maxLength": 256
            }
        },
        "icon": {
            "type": "string",
            "maxLength": 256
        },
        "timeseries": {
            "type": "object",
            "propertyNames": { "$ref": "bbk://slug" },
            "patternProperties": {
                ".*": {
                    "type": "object",
                    "properties": {
                        "period": { "$ref": "bbk://date#/duration" },
                        "value": { "$ref": "bbk://string" },
                        "unit": { "$ref": "bbk://string" }
                     },
                     "required": ["period", "value", "unit"],
                     "additionalProperties": false
                }
            }
        }
    },
    "required": ["name", "description"]
}
