{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://bit-broker.io/validation/connector/schema.json",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64
        },
        "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 8192
        },
        "cache": {
            "type": "integer",
            "minimum": 0,
            "maximum": 31536000
        },
        "webhook": {
            "type": ["string", "null"],
            "maxLength": 1024,
            "format": "uri",
            "pattern": "^https?://.*$"
        }
    },
    "required": ["name", "description"]
}
