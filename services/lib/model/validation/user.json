{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "bbk://user",
    "type": "object",
    "properties": {
        "name": {
            "$ref": "bbk://name"
        },
        "email": {
            "type": "string",
            "format": "email",
            "minLength": 1,
            "maxLength": 256
        },
        "organization": {
            "$ref": "bbk://name"
        }
    },
    "required": ["name", "email", "organization"]
}
